        }
        nextBtn.onclick = () => {
            step++;
            if (step < 3) {
                setStep(step);
            } else {
                // Go to draw your character (phase 1)
                window.location.href = 'phase1.html';
            }
        };
        createDots();
        setStep(0);
    </script>

